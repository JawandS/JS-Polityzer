<script>
  $(document).ready(function() {
    var uagent = navigator.userAgent.toLowerCase();
    if (uagent.search("ipad") > -1) {
      $('.content-pages-show-blog-post img').parent().addClass('img-block');
      $('.content-pages-show-blog-post img').addClass('display-block');
    } else {
      $('.content-pages-show-blog-post img').parent().removeClass('img-block');
      $('.content-pages-show-blog-post img').removeClass('display-block');
    }

    if ( window.innerHeight > ($('.col-sticky').height() + $('.topnav').height()) ) {
      $('.col-sticky').css('position', 'sticky');
    }

    const wrapper = $('#table-of-contents');

    if (wrapper) {
      const ul = $(document.createElement('ul'));

      $('h2').each(function(i, e){
        if ($(e).prev().has('img')) {
          $(e).prev().attr('id', 'webinar-' + (i + 1));
        } else {
          $(e).attr('id', 'webinar-' + (i + 1));
        }

        let li = $(document.createElement('li'));
        li.append(`<a href="#webinar-${i + 1}">${$(e).text()}</a>`);
        ul.append(li);
      });

      wrapper.append(ul);
    }
  });
</script>

</div><!-- /content-* -->

