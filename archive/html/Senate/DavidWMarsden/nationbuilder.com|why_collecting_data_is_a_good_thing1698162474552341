		<script>
			document.onreadystatechange = () => {
				if (document.readyState === "complete") {
					var spinner = document.querySelector('.spinner');
					var content = document.querySelector('#page-content');
					spinner.style.display = 'none';
					content.style.opacity = 1;
				}
			};
		</script>
